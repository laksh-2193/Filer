<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/filer_bg"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="filer"

        android:textSize="30dp"
        android:textAlignment="center"

        android:layout_marginTop="30dp"
        android:gravity="bottom"

        android:textStyle="bold"

        android:textColor="@color/main_color"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        android:fontFamily="@font/regular_font"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"

            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"

            android:textStyle="bold"

            android:textColor="#000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:fontFamily="@font/roboto_black"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to Filer using your Google account"
            android:layout_marginBottom="15dp"
            android:textSize="16dp"
            android:gravity="bottom"


            android:textColor="#605A5A"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:fontFamily="@font/regular_font"
            />
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/circular_google_button"
            android:drawableLeft="@drawable/google_logo"
            android:layout_marginBottom="30dp"
            android:text="Sign in with google"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:fontFamily="@font/roboto_med"
            android:textColor="#706B6B"
            android:textSize="20dp"
            />

    </LinearLayout>









</RelativeLayout>