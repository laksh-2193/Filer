<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehaviour"
    android:background="@drawable/bottom_sheet_bg">
    <TextView
        android:id="@+id/show_files_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Files"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_med"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"

        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/media_files"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FF4062"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_perm_media_black_24dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#fff"

                android:layout_marginTop="85dp"
                android:fontFamily="@font/roboto_med"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/audio_files"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#406AFF"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_audiotrack_black_24dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#fff"

                android:layout_marginTop="85dp"
                android:fontFamily="@font/roboto_med"
                />

        </androidx.cardview.widget.CardView>





    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"

        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:id="@+id/docs_files"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FFC940"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_insert_drive_file_black_24dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documents"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#fff"

                android:layout_marginTop="85dp"
                android:fontFamily="@font/roboto_med"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:id="@+id/other_files"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#5F27CD"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_book_black_24dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#fff"

                android:layout_marginTop="85dp"
                android:fontFamily="@font/roboto_med"
                />

        </androidx.cardview.widget.CardView>





    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/setuppin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Edit Profile"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@color/main_color"
        />
    <TextView
        android:layout_width="1dp"
        android:background="#fff"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="Signout"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@color/main_color"
        />

</LinearLayout>









</LinearLayout>